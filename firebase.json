{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Content-Encoding",
            "value": "gzip"
          }
        ],
        "override": true
      }
    ],
    "build": {
      "chunkSizeWarningLimit": "1000"
    }
  }
}
